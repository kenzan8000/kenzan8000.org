!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title {{ site.title }} - {{ page.title }}
    %meta{:content => "width=device-width", :name => "viewport"}/
    / Custom CSS
    %link{:href => "/css/app.css", :rel => "stylesheet"}/
    / Google Fonts
    %link{:href => "http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Raleway:300,400,700", :rel => "stylesheet", :type => "text/css"}/
    %meta{:content => "text/html; charset=US-ASCII", "http-equiv" => "Content-Type"}/
    %meta{:content => "{{ site.description }}", :name => "description"}/
    %meta{:content => "{{ site.keywords }}", :name => "keywords"}/
    / feedburner
    %link{:href => "http://feeds.feedburner.com/{{ site.feedburner.id }}", :rel => "alternate", :title => "{{ site.title }}", :type => "application/atom+xml"}/
    / javascript
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"}
    %script{:src => "/js/app.js", :type => "text/javascript"}
    :javascript
      $(function() {
          var app = new App();
          {% if site.google_analytics %}
              app.googleAnalyticsAccount = '{{ site.google_analytics.account }}';
          {% endif %}
          app.run();
      });
  %body
    .site
      #sidebar.sidebar
        .header
          %h1.title
            %a{:href => "/"}
              %img#logo{:src => "/images/logo.png"}/
          %span.tagline {{ site.title }}
        .posts
          %ul.posts-list
            {% for post in site.posts %}
            %li.post-link
              %a.post-title{:href => "{{ post.url }}"}
                %span.post-date {{ post.date | date_to_string }}
                {{ post.title }}
            {% endfor %}
        .footer
          %span#footer-links
            %a.footer-link{:href => "{{site.github.url}}"} Github
            %span.separator â€¢
            %a.footer-link{:href => "{{site.twitter.url}}"} Twitter
      {{ content }}
    %script{:src => "/app/responsive.js", :type => "text/javascript"}
